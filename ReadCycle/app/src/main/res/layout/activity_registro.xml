<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navbar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/shape" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            >



            <EditText
                android:id="@+id/nombreRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="text"
                android:hint="@string/nombre" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/correoRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="textEmailAddress"
                android:hint="@string/correo" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/contrase単aRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="textPassword"
                android:hint="@string/contrase単a" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/confimContrase単aRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="textPassword"
                android:hint="@string/contrase単aConfirm" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/formaContactoRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="text"
                android:hint="@string/contacto" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <EditText
                android:id="@+id/zonaLocalizacionRegistro"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_login"
                android:inputType="text"
                android:hint="@string/zona" />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/registro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:elevation="4dp"
            android:textColor="@color/fondoClaro"
            android:backgroundTint="@color/botonAdd"
            android:text="@string/registrarse" />


        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@color/fondoClaro" />

        <Button
            android:id="@+id/signinGoogleBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:elevation="4dp"
            android:textColor="@color/botonAdd"
            android:backgroundTint="@color/fondoClaro"
            android:text="@string/registrarseGoogle" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>